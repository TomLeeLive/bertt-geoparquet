<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <FileVersion>0.1</FileVersion>
    <AssemblyVersion>0.1</AssemblyVersion>
    <PackageReleaseNotes>version 0.1</PackageReleaseNotes>
    <RepositoryUrl>https://github.com/bertt/geoparquet</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageTags>parquet, geoparquet, wkb</PackageTags>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <PackageProjectUrl>https://github.com/bertt/geoparquet</PackageProjectUrl>
    <Copyright>Bert Temme</Copyright>
    <Description>Reader/Writer for GeoParquet files</Description>
    <Company />
    <PackageId>bertt.geoparquet</PackageId>
    <Title>bertt.geoparquet</Title>
    <Version>0.1</Version>
    <Authors>Bert Temme</Authors>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Newtonsoft.Json" Version="13.0.2" />
    <PackageReference Include="Parquet.Net" Version="4.1.3" />
    <PackageReference Include="System.Threading.Tasks" Version="4.3.0" />
  </ItemGroup>

</Project>
